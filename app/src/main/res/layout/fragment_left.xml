<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_sj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/sj" />

            <ImageView
                android:id="@+id/left_qq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/qq" />

            <ImageView
                android:id="@+id/left_wechat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1"
                android:src="@mipmap/wx" />

            <ImageView
                android:id="@+id/left_weibo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1"
                android:src="@mipmap/wb" />
        </LinearLayout>

        <Button
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="更多登录方式>"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableTop="@mipmap/sc"
                android:textColor="@color/smssdk_black"
                android:paddingTop="8dp"
                android:text="收藏" />

            <Button
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableTop="@mipmap/ls"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/smssdk_black"
                android:text="历史" />

            <Button
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/smssdk_black"

                android:background="#fff"
                android:drawableTop="@mipmap/rj"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="日间" />

            <Button
                android:id="@+id/left_night"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableTop="@mipmap/yj"
                android:hint="true"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="夜间"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ListView
            android:id="@+id/left_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>
