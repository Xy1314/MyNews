<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="text.bwie.com.mynews.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f00"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action1_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:src="@mipmap/yuhu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="今日头条"
            android:textColor="#fff"
            android:textSize="20dp" />

        <android.support.v7.widget.SearchView

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="2"
            android:background="#fff"></android.support.v7.widget.SearchView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/action1_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabMode="scrollable"

            app:tabPadding="5dp"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/colorPrimary">

        </android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/action1_guanli"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:src="@mipmap/jia" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/action1_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>

